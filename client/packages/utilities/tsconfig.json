{
	"extends": "@loomify/tsconfig/tsconfig.base.json",
	"references": [{ "path": "./tsconfig.build.json" }],
	"compilerOptions": {
		"declaration": true,
		"emitDeclarationOnly": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"allowImportingTsExtensions": true,
		"target": "ES2022",
		"lib": ["es2022", "dom"]
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist/**", "src/**/*.spec.ts"]
}
