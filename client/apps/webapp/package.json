{
	"name": "@loomify/webapp",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"engines": {
		"node": "^20.19.0 || >=22.12.0"
	},
	"scripts": {
		"dev": "vite",
		"build": "run-p type-check \"build-only {@}\" --",
		"preview": "vite preview",
		"pretest": "pnpm --filter @loomify/utilities build",
		"test:unit": "vitest",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test": "run-s pretest test:unit",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"build-only": "vite build",
		"type-check": "vue-tsc --build",
		"lint:oxlint": "oxlint . --fix -D correctness --ignore-path .gitignore",
		"lint:biome": "biome check . --write",
		"lint": "run-s lint:*",
		"clean": "rm -rf dist node_modules .vitest .cache",
		"check": "run-p type-check lint"
	},
	"dependencies": {
		"@loomify/logger": "workspace:*",
		"@loomify/utilities": "workspace:*",
		"pinia": "^3.0.3",
		"vue": "^3.5.20",
		"vue-router": "^4.5.1"
	},
	"devDependencies": {
		"@playwright/test": "^1.55.0",
		"@tsconfig/node22": "^22.0.2",
		"@types/jsdom": "^21.1.7",
		"@types/node": "^24.3.0",
		"@vitejs/plugin-vue": "^6.0.1",
		"@vitest/eslint-plugin": "^1.3.4",
		"@vue/eslint-config-typescript": "^14.6.0",
		"@vue/test-utils": "^2.4.6",
		"@vue/tsconfig": "^0.8.1",
		"jiti": "^2.5.1",
		"jsdom": "^26.1.0",
		"npm-run-all2": "^8.0.4",
		"oxlint": "~1.12.0",
		"typescript": "~5.9.2",
		"vite": "^7.0.6",
		"vite-plugin-vue-devtools": "^8.0.1",
		"vitest": "^3.2.4",
		"vue-tsc": "^3.0.6"
	}
}
