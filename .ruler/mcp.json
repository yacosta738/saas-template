{
	"mcpServers": {
		"sequentialthinking": {
			"command": "docker",
			"args": [
				"run",
				"--rm",
				"-i",
				"--name",
				"mcp-sequentialthinking",
				"--read-only",
				"--cap-drop=ALL",
				"--security-opt=no-new-privileges",
				"-v",
				"mcp-seq-data:/app/data",
				"mcp/sequentialthinking"
			]
		},
		"memory": {
			"command": "docker",
			"args": [
				"run",
				"-i",
				"-v",
				"claude-memory:/app/dist",
				"--rm",
				"--name",
				"mcp-memory",
				"--read-only",
				"--cap-drop=ALL",
				"--security-opt=no-new-privileges",
				"mcp/memory"
			]
		},
		"filesystem": {
			"command": "docker",
			"args": [
				"run",
				"--rm",
				"-i",
				"--name",
				"mcp-filesystem",
				"--read-only",
				"--cap-drop=ALL",
				"--security-opt=no-new-privileges",
				"-v",
				"mcp-files:/data",
				"mcp/filesystem"
			]
		},
		"github": {
			"command": "docker",
			"args": [
				"run",
				"--rm",
				"-i",
				"--name",
				"mcp-github",
				"--read-only",
				"--cap-drop=ALL",
				"--security-opt=no-new-privileges",
				"-e",
				"GITHUB_TOKEN",
				"-v",
				"mcp-github-cache:/tmp/cache",
				"mcp/github"
			]
		},
		"git": {
			"command": "npx",
			"args": ["-y", "@modelcontextprotocol/server-git", "--repository", "."]
		}
	}
}
